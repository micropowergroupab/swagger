{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API Specification",
    "description": "This is an API specification that allows customers to efficiently integrate our platforms into their existing company systems and enhance user experience in delivering speed, convenience and accurate reporting.",
    "termsOfService": "https://docs.micropower-group.com/#!doc/topic:GET_User_Terms_and_conditions",
    "contact": {
      "name": "Micropower Group",
      "email": "get-cloud@micropower.se"
    }
  },
  "tags": [
    {
      "name": "battery"
    }
  ],
  "servers": [
    {
      "url": "https://micropowerapi.azurewebsites.net/api/v1/",
      "description": "API server"
    }
  ],
  "paths": {
	"/battery/{id}/alarms": {
      "get": {
        "tags": [
          "battery"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id is the battery's identifier",
            "example": "562959144425069",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "description": "start date of the requested alarm logs at 00:00:00",
            "example": "2022-02-01",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "end date of the requested alarm logs at 23:59:59",
            "example": "2022-02-03",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "Get battery's alarm logs",
        "responses": {
          "200": {
            "description": "Get the alarm logs of a given id on the requested duration.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBatteryalarm"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              }
            }
          },
          "404": {
            "description": "ItemNotFound",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ItemNotFound"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    },
    "/battery/{id}/minutely": {
      "get": {
        "tags": [
          "battery"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id is the battery's identifier",
            "example": "562959144425069",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "description": "start date of the requested minutely data",
            "example": "2022-01-01 00:00:00",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "end date of the requested alarm logs at 23:59:59",
            "example": "2022-02-03",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "Get battery's minutely data",
        "responses": {
          "200": {
            "description": "Get the minutely data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponsebatteryInstant"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              }
            }
          },
          "404": {
            "description": "ItemNotFound",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ItemNotFound"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    },
    "/battery/{id}/delete": {
      "delete": {
        "tags": [
          "battery"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id is the battery's identifier",
            "example": "1",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "Delete battery",
        "responses": {
          "200": {
            "description": "Successfully deleting the battery from the database.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseDeletebattery"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              }
            }
          },
          "404": {
            "description": "ItemNotFound",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ItemNotFound"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "ResponseDeletebattery": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "success or fail",
            "example": "success"
          }
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "fail"
          },
          "message": {
            "type": "string",
            "example": "Unauthorized: You must log in to do this."
          }
        }
      },
      "InternalServerError": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "fail"
          },
          "message": {
            "type": "string",
            "example": "Internal server error"
          }
        }
      },
      "ItemNotFound": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "fail"
          },
          "message": {
            "type": "string",
            "example": "Item Not Found"
          }
        }
      },
      "ResponsebatteryInstant": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "type": "object",
            "properties": {
              "x": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "The time when instant log was written",
                "example": [
                  "2020-01-01 00:00:00",
                  "2020-01-01 00:00:02",
                  "2020-01-01 00:00:04",
                  "2020-01-01 00:00:06"
                ]
              },
              "y_names": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": [
                  "Charger voltage",
                  "Charger temperature",
                  "Charger current"
                ],
                "description": "Left/right axis names"
              },
              "y": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                },
                "example": [
                  [
                    25.6,
                    24.8,
                    24.7,
                    24.6
                  ],
                  [
                    25.6,
                    24.8,
                    24.7,
                    24.6
                  ],
                  [
                    25.6,
                    24.8,
                    24.7,
                    24.6
                  ]
                ]
              }
            }
          }
        }
      },
      "ResponseBatteryalarm": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "success or fail",
            "example": "success"
          },
          "data": {
            "type": "object",
            "properties": {
              "fields": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": [
                  "Timestamp",
                  "Code",
                  "SOC",
                  "Phase"
                ]
              },
              "values": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "integer"
                        },
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "number"
                        },
                        {
                          "type": "object"
                        },
                        {
                          "type": "array"
                        }
                      ]
                    }
                  }
                },
                "example": [
                  [
                    "2020-08-21 18:44:39",
                    "MPL80D3",
                    72,
                    "DISCHARGE"
                  ],
                  [
                    "2020-08-20 18:44:39",
                    "MPL80D3",
                    46,
                    "DISCHARGE"
                  ]
                ]
              }
            }
          }
        }
      },
    },
  }
}
